package members

templ renderDonationCard(member *member) {
	if member.HasStripeCustomer {
		<div class="card mb-4">
			<div class="card-body text-center">
				<p class="text-muted small mb-3">Need to pay for consumables, or other usage costs? You can make a one-time payment here.</p>
				<a href="/donations/checkout" class="btn btn-outline-success btn-sm">Make a Payment</a>
			</div>
		</div>
	}
}
